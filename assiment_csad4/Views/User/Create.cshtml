@model assiment_csad4.ViewModel.SignUp

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                @if (!string.IsNullOrEmpty(ViewBag.errorSame))
                {
                        <span class="text-danger">
                       @Html.Raw(@ViewBag.errorSame)
                        </span>
                }
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label"></label>
                <input asp-for="Pass" class="form-control" type="password" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
             <div class="form-group">
                    <label class="col-md-10 control-label">ConfirmPassword</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                    @if (!string.IsNullOrEmpty(ViewBag.ConfirmPassword))
                    {
                            <span class="text-danger">
                            @Html.Raw(ViewBag.ConfirmPassword)
                            </span>
                    }
                </div>
            <div class="form-group">
                <label asp-for="IdRole" class="control-label"></label>
                <select asp-for="IdRole" class ="form-control" asp-items="ViewBag.IdRole"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
