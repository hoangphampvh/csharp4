@model IEnumerable<assiment_csad4.Models.Bill>

@{
    ViewData["Title"] = "View";
}

<h1>Don Hang Dang Cho Xac Nhan</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <b>User</b>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.FirstOrDefault(p=>p.UserId == item.UserId).UserNavigation.Name)  
                </td>
                <td>
                    @if (item.Status == 2)
                    {
                           <p>Don hang dang cho xac nhan</p>
                    }
                    else
                    {
                           <p>Don Hang Xac Nhan Thanh Cong</p>
                    }
                </td>
                <td>  
                     <a asp-controller="Bill" asp-action="Details" asp-route-Id = "@item.Id">Details</a>           

                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Product" asp-action="Index">Back to List</a>